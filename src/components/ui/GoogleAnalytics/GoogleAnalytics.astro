---
const { trackingId } = Astro.props as { trackingId?: string };
if (!trackingId) {
  return null;
}
const clientUrl = new URL("./ga.client.ts", import.meta.url).href;
const inlineScript = `import("${clientUrl}").then((module) => module.initGoogleAnalytics?.(${JSON.stringify(trackingId)}));`;
---

<script is:inline type="module" set:html={inlineScript} />
