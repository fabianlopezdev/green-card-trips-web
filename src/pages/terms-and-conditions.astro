---
import Layout from "Layout.astro";
import defaultTemplateConfig from "utils/config";
import { generateBreadcrumbSchema } from "utils/structuredData";
import Navbar from "../components/navbar/index.astro";
import AppBanner from "../components/appBanner/index.astro";
import Footer from "../components/footer/index.astro";
import TermsAndConditionsContent from "@modules/termsAndConditions/index.astro";
import { getLegalEntry } from "@modules/legal/getLegalEntry";
import enTranslations from "../i18n/locales/en.json";

// English legal page URLs (at root level)
const legalUrls = {
  termsAndConditions: '/terms-and-conditions',
  privacyPolicy: '/privacy-policy',
  cookiesPolicy: '/cookies-policy',
};

// Generate site URL for breadcrumbs
const siteUrl = Astro.site || new URL(Astro.url.origin);

const termsEntry = await getLegalEntry("terms-and-conditions", "en");

// Generate breadcrumb schema
const breadcrumbs = [
  { name: "Home", url: new URL('/', siteUrl).href },
  { name: termsEntry.data.title, url: new URL('/terms-and-conditions', siteUrl).href }
];
const breadcrumbSchema = generateBreadcrumbSchema(breadcrumbs);
---

<Layout
  {...defaultTemplateConfig}
  seo={termsEntry.data.seo}
>
  <!-- BreadcrumbList Structured Data -->
  <script is:inline type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} slot="head" />

  
  <main id="main">
    <Navbar config={defaultTemplateConfig} translations={enTranslations} currentLang="en" />
    <TermsAndConditionsContent currentLang="en" />
    <AppBanner config={defaultTemplateConfig} translations={enTranslations} currentLang="en" />
    <Footer config={defaultTemplateConfig} translations={enTranslations} currentLang="en" legalUrls={legalUrls} />
  </main>
</Layout>
